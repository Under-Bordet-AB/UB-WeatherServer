{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C App",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb", // kör från ditt systems PATH, ska funka på windows, wsl, linux. Hårdkoda ej en path.
            "preLaunchTask": "build",
            "setupCommands": [
                 {
                    "description": "break on free for specific pointer (adjust address)",
                    "text": "break free if (void*) $rdi == (void*) 0x0",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Skip system libraries",
                    "text": "skip -gfi /usr/lib/x86_64-linux-gnu/*"
                },
                { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true },
                { "description": "stop on SIGINT", "text": "handle SIGINT stop print pass", "ignoreFailures": true }
     
            ],
             "logging": { "engineLogging": true }
        }
    ]
}